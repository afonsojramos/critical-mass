STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g')

# Run format on staged files and stage any fixes
if [ -n "$STAGED_FILES" ]; then
  bun format $STAGED_FILES --no-errors-on-unmatched
  git add $STAGED_FILES
fi

# Run lint check (should pass now after formatting)
bun lint $STAGED_FILES --no-errors-on-unmatched
bun tsc --noEmit
