---
import coimbra from "@/assets/cities/coimbra.svg";
import lisboa from "@/assets/cities/lisboa.svg";
import porto from "@/assets/cities/porto.svg";
import viana from "@/assets/cities/viana.svg";
import plus from "@/assets/plus.svg";
import Section from "@/components/sections/Section.astro";
import LocationCard from "@/components/ui/LocationCard.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import * as m from "@/paraglide/messages";

const cards = [
  {
    index: 1,
    titleTop: "Lisboa",
    titleBottom: "Praça Marquês de Pombal 18h30",
    img: lisboa,
    link: "https://www.instagram.com/massacriticalisboa/",
  },
  {
    index: 2,
    titleTop: "Porto",
    titleBottom: "Praça do Marquês 18h30",
    img: porto,
    link: "https://www.instagram.com/massacriticaporto/",
  },
  {
    index: 3,
    titleTop: "Viana",
    titleBottom: "Praça da República 18h30",
    img: viana,
    link: "https://www.instagram.com/massacriticaviana/",
  },
  {
    index: 4,
    titleTop: "Coimbra",
    titleBottom: "Largo da Portagem 18h30",
    img: coimbra,
    link: "https://www.instagram.com/coimbrapedal/",
  },
  {
    index: 5,
    titleTop: m.locations_moreComingSoon(),
    titleBottom: m.locations_createYourMovement(),
    img: plus,
    link: "mailto:afonsojorgeramos@gmail.com",
  },
];
---

<Section id="locations">
  <div class="mt-24 mb-5">
    <SectionTitle
      sectionTitle={m.locations_title}
      description={m.locations_description}
    />
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      {
        cards.map((card) => (
          <LocationCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.titleTop}
            link={card.link}
            newLocation={card.index === 5}
          />
        ))
      }
    </div>
  </div>
</Section>
