---
import { Image } from "astro:assets";
import Logo from "@/assets/logo-alt.svg";
import KidicalMass from "@/assets/sponsors/kidical-mass.svg";
import Mubi from "@/assets/sponsors/mubi-cropped.png";
import * as m from "@/paraglide/messages";

const contactLocations = [
  { name: "MUBI", href: "https://mubi.pt" },
  { name: "MUBI Email", href: "mailto:geral@mubi.pt" },
  { name: "afonso ramos", href: "https://afonsojramos.me" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1280px] mx-auto">
    <div
      class="flex flex-col md:flex-row justify-around bg-dark text-gray py-[55px] px-4 lg:px-0 sm:rounded-t-[45px] gap-8"
    >
      <div class="flex flex-col gap-8 items-center self-center md:items-start">
        <a href="#home" class="flex items-center">
          <Image
            src={Logo}
            alt="Logo for Critical Mass"
            class="size-24 text-white"
            loading="lazy"
          />
          <h1 class="text-white text-2xl font-bold uppercase">
            {
              m
                .hero_title()
                .split("\n")
                .map((line, index) => (
                  <span class={`block ${index > 0 && "text-4xl"}`}>{line}</span>
                ))
            }
          </h1>
        </a>
        <div class="flex flex-col items-center gap-2">
          <span class="text-green text-center text-xl lg:text-start">
            {m.partners()}
          </span>
          <div class="flex flex-row items-center gap-2">
            <a href="https://mubi.pt">
              <Image
                src={Mubi}
                alt="Logo for Mubi"
                class="text-white"
                loading="lazy"
                height={64}
                width={125}
              />
            </a>
            <a href="https://kidicalmass.pt">
              <Image
                src={KidicalMass}
                alt="Logo for Kidical Mass"
                class="text-white"
                loading="lazy"
                height={64 * 1.2}
                width={125 * 1.2}
              />
            </a>
          </div>
        </div>
      </div>
      <div
        class="flex text-center lg:text-start items-center md:items-start flex-col"
      >
        <h3 class="mb-5 text-center md:text-left text-2xl text-green">
          {m.footer_contact}
        </h3>
        <div class="flex flex-col justify-between gap-4">
          {
            contactLocations.map((location) => {
              return (
                <div class="flex items-center gap-2">
                  <span> {location.name}: </span>

                  <a
                    href={location.href}
                    target="_blank"
                    class="flex items-center gap-1"
                  >
                    {location.href.includes("https")
                      ? location.href.split("/").slice(2).join("/")
                      : location.href.replace("mailto:", "")}
                  </a>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>
