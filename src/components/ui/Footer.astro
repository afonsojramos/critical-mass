---
import { Image } from "astro:assets";
import KidicalMass from "@/assets/communities/kidical-mass.svg";
import Mubi from "@/assets/communities/mubi-cropped.png";
import GitHub from "@/assets/github.svg";
import Globe from "@/assets/globe.svg";
import Logo from "@/assets/logo-alt.svg";
import * as m from "@/paraglide/messages";

const contacts = {
  name: "afonso ramos",
  email: "afonsojorgeramos@gmail.com",
  href: "https://afonsojramos.me",
  github: "https://github.com/afonsoramos/critical-mass",
};
---

<section class="sm:px-5">
  <div class="w-full max-w-[1280px] mx-auto">
    <div
      class="flex flex-col md:flex-row justify-around bg-dark text-gray py-[55px] px-4 lg:px-0 sm:rounded-t-[45px] gap-8"
    >
      <div class="flex flex-col gap-8 items-center self-center md:items-start">
        <a href="#home" class="flex items-center">
          <Image
            src={Logo}
            alt="Logo for Critical Mass"
            class="size-24 text-white"
            loading="lazy"
          />
          <h1 class="text-white text-2xl font-bold uppercase">
            {
              m
                .hero_title()
                .split("\n")
                .map((line, index) => (
                  <span class={`block ${index > 0 && "text-4xl"}`}>{line}</span>
                ))
            }
          </h1>
        </a>
        <div class="flex flex-col items-center gap-8">
          <span class="text-green text-center text-xl lg:text-start">
            {m.communities()}
          </span>
          <div class="flex flex-row items-center gap-4">
            <a href="https://mubi.pt">
              <Image
                src={Mubi}
                alt="Logo for Mubi"
                class="text-white"
                loading="lazy"
                height={64}
                width={125}
              />
            </a>
            <a href="https://kidicalmass.pt">
              <Image
                src={KidicalMass}
                alt="Logo for Kidical Mass"
                class="text-white"
                loading="lazy"
                height={64 * 1.2}
                width={125 * 1.2}
              />
            </a>
          </div>
        </div>
      </div>
      <div
        class="flex text-center lg:text-start items-center md:items-start flex-col self-center"
      >
        <h3 class="mb-5 text-center md:text-left text-2xl text-green">
          {m.footer_contribute}
        </h3>
        <p class="text-center md:text-left">
          {m.footer_contact}
        </p>
        <a
          href={`mailto:${contacts.email}`}
          target="_blank"
          class="hover:underline"
        >
          {contacts.email.split("@").join(" @ ")}
        </a>
        <div class="flex gap-4 mt-8 md:justify-start justify-center">
          <a href={contacts.href} target="_blank" aria-label="Personal Website">
            <Image src={Globe} alt="Website" class="w-5 h-5" loading="lazy" />
          </a>
          <a
            href={contacts.github}
            target="_blank"
            aria-label="GitHub Repository"
          >
            <Image src={GitHub} alt="GitHub" class="w-5 h-5" loading="lazy" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
